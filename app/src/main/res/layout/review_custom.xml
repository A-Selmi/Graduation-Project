<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/NameTextViewReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Talal Selmi" />

    <TextView
        android:id="@+id/DateTextViewReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTextViewReview"
        tools:text="12/7/2020" />

    <TextView
        android:id="@+id/ReviewDetailsTextViewReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_background_white"
        android:padding="5dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DateTextViewReview"
        tools:text="الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي الرأي " />

    <RatingBar
        android:id="@+id/ratingBarReview"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:theme="@style/RatingBarDark"
        app:layout_constraintBottom_toBottomOf="@+id/DateTextViewReview"
        app:layout_constraintEnd_toEndOf="@+id/ReviewDetailsTextViewReview"
        app:layout_constraintTop_toTopOf="@+id/NameTextViewReview" />
</androidx.constraintlayout.widget.ConstraintLayout>